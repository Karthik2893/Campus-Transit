<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    tools:context="com.hfad.campus_transit.MainActivity">

    <Button
        android:id="@+id/buildingsButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/scheduleButton"
        android:layout_alignBottom="@+id/scheduleButton"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/building"
        android:onClick="toBuildingsList"
        android:text="@string/buildingsButtonName" />


    <Button
        android:id="@+id/scheduleButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/schedule"
        android:onClick="toSchedule"
        android:text="@string/schedulebuttonName"
        android:textAllCaps="false" />


</RelativeLayout>
